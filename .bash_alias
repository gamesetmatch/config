# Utility aliases
alias ll="ls -ltr";
alias server-start="/Library/Tomcat/bin/startup.sh";
alias server-stop="/Library/Tomcat/bin/shutdown.sh";
alias server-restart="/Library/Tomcat/bin/shutdown.sh;/Library/Tomcat/bin/startup.sh";
alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app';
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app';

# Security aliases
alias rm="rm -i";
alias cp="cp -i";
alias mv="mv -i";
